.category-container{
  width:100%;
  height:100%;
}
.category-item{
  width:100%;
  height:88rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  color:#666;
  font-size: 28rpx;
}
.category-item.active{
  background:#fff;
  color:#333;
  font-weight:bold;
}
.hot-icon,
.discount-icon{
  width:35rpx;
  height:35rpx;
  background:#ff5d5a;
  color:#fff;
  font-size:20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right:10rpx;
}
.discount-icon{
  background:#fde754;
}