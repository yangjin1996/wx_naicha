.add-btn{
  width:100%;
  height:88rpx;
  background:#ffce00;
  text-align: center;
  line-height: 88rpx;
  color:#fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.address-list{
  width:100%;
  margin-top:20rpx;
}
.address-item.selected{
  background:#5e6b85;
}
.address-item.selected .address-content{
  color:#fff;
}
.address-item{
  width:100%;
  height:148rpx;
  background:#fff;
  padding:40rpx 32rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  /* position: relative; */
}
.address-content{
  width:0;
  height:100%;
  flex:1;
  margin-right:20rpx;
}
.address-name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height:42rpx;
  font-size: 32rpx;
}
.address-detail{
  font-size:24rpx;
  margin-top:10rpx;
  line-height: 1.5em;
}
.iconfont{
  color:#fff;
  font-size:40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width:50rpx;
  height:100%;
}