page{
  margin-bottom: 88rpx;
}
.goods-list{
  width:100%;
  padding:0 20rpx;
  background:#fff;
  box-sizing: border-box;
  overflow: auto;
  position: relative;
}
.goods-cell{
  display: flex;
  font-size:24rpx;
  margin-bottom:20rpx;
}
.scroll-goods-view{
  width:100%;
  padding-top: 10rpx;
  box-sizing: border-box;
}
.goods-img{
  width:150rpx;
  height:150rpx;
  border-radius: 10rpx;
}
.goods-info{
  width:0;
  flex:1;
  padding:10rpx 0;
  margin-left:20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}
.goods-title{
  width:100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-price{
  font-size: 28rpx;
  font-weight: bold;
}
.buy-number-container{
  color:#ffca00;
  width:105rpx;
  height:32rpx;
  position: absolute;
  right:0;
  bottom:0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:32rpx;
}
.buy-number-container .iconfont{
  height:32rpx;
  width:32rpx;
}
.buy-number-container .hidden{
  opacity: 0;
}
.coupon-container{
  background:#fff;
  width:100%;
  margin-top:20rpx;
}
.checkbox-img{
  width:30rpx;
  height:30rpx;
}
.limit-coupon{
  font-size: 20rpx;
  color:red;
}
.submit-container{
  width:100%;
  height:88rpx;
  background: #fff;
  position: fixed;
  left:0;
  bottom: 0;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
  display: flex;
}
.submit-container .btn{
  width:200rpx;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color:#fff;
  background: #ffce00;
}
.submit-container .order-count{
  width:0;
  flex: 1;
  margin:0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.submit-container .order-count .actual-payment{
  font-size: 32rpx;
  color:#ffce00;
  font-weight: 700;
}
.submit-container .order-count .order-info{
  font-size: 24rpx;
  color:#999;
}